<div class="container">
  <br>
<% if(flash) { %>
<% if(flash.err) { %>
      <div>
      <br><br>
      <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        <% Object.keys(flash.err).forEach(function(error) { %>
              <%= flash.err[error] %>
        <% }) %>
      </div>
      </div>
<% } else if (flash.success){ %>
  <div>
  <br><br>
  <div class="alert alert-success" role="alert">
    <span class="sr-only">Success:</span>
    <% Object.keys(flash.success).forEach(function(success) { %>
          <%= flash.success[success] %>
    <% }) %>
  </div>
  </div>
<% } %>
<% } %>
<div class="panel panel-primary" style="margin-bottom: 140px;">
    <div class="panel-heading">
      <h2 class="panel-title">Reset Password</h2>
    </div>
    <div class="panel-body">
          <form  method="post" action="/session/reset" class="form-horizontal" role="form">
          <div class="form-group">
          <label class="control-label col-lg-4 required">Email &#42;</label>
          <div class="col-lg-8">
          <input type="email" id="email" name="email" required="required" class="form-control" value="<%=user.email%>" disabled="">
          </div>
          </div>
          <div class="form-group">
          <label class="control-label col-lg-4 required">Password Baru &#42;</label>
          <div class="col-lg-8">
          <input type="password" id="password" name="password" required="required" class="form-control" placeholder="">
          </div>
          </div>
          <div class="form-group">
          <label class="control-label col-lg-4 required">Konfirmasi Password Baru &#42;</label>
          <div class="col-lg-8">
          <input type="password" id="passwordconfirmation" name="passwordconfirmation" required="required" class="form-control" placeholder="">
          </div>
          </div>
          <div class="form-group" >
          <div class="col-lg-offset-4 col-lg-8">
          <button type="submit" id="send" class="btn-color btn btn-primary" style="margin-top:0px;">Reset Password</button>
          </div>
          </div>
          </form>
    </div>
  </div>
  </div>

<script src="https://www.google.com/recaptcha/api.js" async defer></script>